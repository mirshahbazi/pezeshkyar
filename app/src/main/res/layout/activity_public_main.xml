<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offices_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:fitsSystemWindows="true"
    tools:openDrawer="left">

    <include
        layout="@layout/activity_offices"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/offices_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_1"
        app:itemBackground="@drawable/nav_selected_item"
        app:itemIconTint="@color/nav_selected_icon"
        app:itemTextAppearance="@style/NavigationDrawerStyle"
        app:itemTextColor="@color/nav_selected_text"
        app:menu="@menu/activity_public_main_drawer">

        <include layout="@layout/nav_header_main" />

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>