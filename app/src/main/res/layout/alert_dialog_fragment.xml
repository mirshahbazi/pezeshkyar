<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alertDialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:padding="@dimen/my_padding"
        android:textSize="16sp" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/alertDialog_text"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/alertDialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/alertDialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/alertDialog_positive"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:textColor="@color/delete"
            android:textSize="14sp" />

    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>