<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/support_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/support_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/support_comment"
            android:text="حسین سالخورده"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/support_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/support_sender"
            android:layout_marginTop="15dp"
            android:text="سلام"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/support_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/support_comment"
            android:layout_marginTop="10dp"
            android:text="چهارشنبه 23 مهر 95 11:30"
            android:textColor="@android:color/darker_gray" />


    </RelativeLayout>

</LinearLayout>