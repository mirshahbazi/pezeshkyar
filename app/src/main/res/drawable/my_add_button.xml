<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#34a853" />
            <stroke android:width="2dp" android:color="#298341" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#92d6a4" />
            <stroke android:width="2dp" android:color="#92d6a4" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#298341" android:startColor="#34a853" />
            <stroke android:width="1dp" android:color="#34a853" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
</selector>